<!DOCTYPE html>
<html>
<% include partials/head %>
<body>
  <header>
    <nav class="red darken-3">
      <div class="nav-wrapper">
        <span class="brand-logo center"><img src="/images/logo.png" height="25" alt="" id="logo">Politburo Avtomobil</span>
      </div>
    </nav>
  </header>
  <main>
    <div class="row"><% include partials/alert %></div>
    <div class="row">
      <div class="col s12 m6 l4 offset-m3 offset-l4 hoverable">
        <form action="/" method="post">
          <div class="row">
            <fieldset>
              <div class="input-field col s12">
                <input id="login" type="text" name="login" required autofocus="true">
                <label for="login">Nome de Usuário</label>
              </div>
              <div class="input-field col s12">
                <input id="senha" type="password" name="senha" required>
                <label for="senha">Senha</label>
              </div>
              <div class="row">&nbsp;</div>
              <div class="center-align">
                <button type="submit" id="submit" class="btn waves-effect waves-light red darken-3">
                  Iniciar Sessão
                </button>
              </div>
              <legend>Login</legend>
            </fieldset>
          </div>
        </form>
      </div>
    </div>
  </main>
  <% include partials/footer %>
</body>
<script src="/materialize/js/jquery-3.1.1.js"></script>
<script src="/materialize/js/materialize.js"></script>
<script>
$(function(){
  $(".button-collapse").sideNav();
});
</script>
</html>
