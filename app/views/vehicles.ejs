<!DOCTYPE html>
<html>
<% include partials/head %>
<body>
  <header>
    <% include partials/navs/navbar %>
  </header>
  <main>
    <h5 class="center-align">Avtomobils</h5>
    <div class="divider"></div>
    <div class="row">
      <div class="col s12 m4 l4 hoverable">
        <fieldset>
          <div class="row">
            <form action="vehicles/new" method="post">
              <div class="input-field col s12 m6 l6">
                <input type="text" name="marca" autofocus="true" autocomplete="off">
                <label for="marca">Marca</label>
              </div>
              <div class="input-field col s12 m6 l6">
                <input type="text" name="modelo" autocomplete="off">
                <label for="modelo">Modelo</label>
              </div>
              <div class="input-field col s12 m6 l6">
                <input type="text" name="placa" autocomplete="off">
                <label for="placa">Placa</label>
              </div>
              <div class="input-field col s12 m6 l6">
                <input type="text" name="ano" autocomplete="off">
                <label for="ano">Ano</label>
              </div>
              <div class="input-field col s12 m6 l6">
                <input type="text" name="cor" autocomplete="off">
                <label for="cor">Cor</label>
              </div>
              <div class="input-field col s12 m6 l6">
                <input type="text" name="valor_locacao" autocomplete="off">
                <label for="valor_locacao">Diária</label>
              </div>
              <div class="input-field col s12 m12 l12 center-align">
                <button type="submit" class="btn btn-small waves-effect orange darken-3">Gravar</button>
                <button type="reset" class="btn btn-small waves-effect red darken-3">Limpar</button>
              </div>
            </form>
          </div>
          <legend>Novo Avtomobil</legend>
        </fieldset>
      </div>
      <div class="divider hide-on-med-and-up"></div>
      <div class="col s12 m4 l4 hoverable">
        <fieldset>
          <div class="row">
            <table class="responsive-table">
              <thead>
                <tr>
                  <td>Marca</td>
                  <td>Modelo</td>
                  <td>Placa</td>
                  <td>Ano</td>
                  <td>Cor</td>
                  <td>Diária</td>
                </tr>
              </thead>
            </table>
          </div>
          <legend>Lista geral de Avtomobils</legend>
        </fieldset>
      </div>
      <div class="divider hide-on-med-and-up"></div>
      <div class="col s12 m4 l4 hoverable">
        <fieldset>
          <div class="row">
            <table>
              <thead>
                <tr>
                  <td>Data</td>
                  <td>Dias</td>
                  <td>Valor</td>
                </tr>
              </thead>
              <tbody>

              </tbody>
            </table>
          </div>
          <legend>Últimas manutenções</legend>
        </fieldset>
      </div>
    </main>
  </div>
  <% include partials/footer %>
</body>
<script src="/materialize/js/jquery-3.1.1.js"></script>
<script src="/materialize/js/materialize.js"></script>
<script>
$(function(){
  $(".button-collapse").sideNav();
  $("#form_enable").click(function(){
    $(":input[type='text']").attr('disabled', function(_, attr){ return !attr});
    $(":input[type='email']").attr('disabled', function(_, attr){ return !attr});
    $("#update_user").attr('disabled', function(_, attr){ return !attr});
    $("#delete_user").attr('disabled', function(_, attr){ return !attr});
    $("#name").focus();
  });

});
</script>
</html>
